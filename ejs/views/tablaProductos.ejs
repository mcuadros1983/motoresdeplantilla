<%- include("./encabezado") -%>
    <body>
        <div class="container" style="background: rgb(174, 203, 214);">
            <div class="jumbotron" style="height:100vh">
                <h1 style="color:blue">VISTA DE PRODUCTOS</h1>
                <% if(data.length>0) { %>
                    <div class="table-responsive">
                        <table class="table table-dark" style="text-align: center;">
                            <tr style="color:white;">
                                <th>NOMBRE</th>
                                <th>PRECIO</th>
                                <th>IMAGEN</th>
                            </tr>
                            <%data.forEach(function(productos){ %>
                                <tr>
                                    <td>
                                        <%- productos.title -%>
                                    </td>
                                    <td>
                                        <%- productos.price -%>
                                    </td>
                                    <td>
                                        <img src="<%- productos.image -%>" alt="" width="50px" height="50px">
                                    </td>
                                </tr>
                                <%})%>

                        </table>
                    </div>
                    <% }else{ %>
                        <div style="background: rgb(240, 240, 178); color:rgb(141, 143, 23)">
                            <p style="font-size: x-large;">No se encontraron productos</p>
                        </div>
                        <% } %>
                            <a href="/"><button type="button" class="btn btn-secondary">Volver al
                                    Formulario</button></a>
            </div>

        </div>
    </body>
    </html>
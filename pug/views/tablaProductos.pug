include layout.pug
div(class="container" style="background: rgb(174, 203, 214);")
    div(class="jumbotron" style="height:100vh")
        h1(style="color:blue")="VISTA DE PRODUCTOS"
        if(data.length>0)
            div(class="table-responsive")
                table(class="table table-dark" style="text-align: center;")
                    tr(style="color:white;")
                        th="NOMBRE"
                        th="PRECIO"
                        th="IMAGEN"
                    each val in data
                        tr
                            td=val.title 
                            td=val.price
                            td
                                img(src=val.image alt="" width="50px" height="50px")
        else 
            div(style="background: rgb(240, 240, 178); color:rgb(141, 143, 23)")
                p(style="font-size: x-large;")="No se encontraron productos"
        a(href="/")
            button(type="button" class="btn btn-secondary")="Volver al Formulario"
